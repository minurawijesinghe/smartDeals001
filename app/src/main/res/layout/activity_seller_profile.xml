<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/profileName"
        android:layout_width="406dp"
        android:layout_height="44dp"
        android:text="Keals Supermarcket"
        android:layout_below="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.002"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165"
        android:textAlignment="center"
        style="@android:style/TextAppearance.Large"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profileDiscription"
        android:text="All your needs under one roof"
        android:layout_below="@+id/profileName"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp"
        tools:srcCompat="@tools:sample/avatars[0]"
        android:src="@drawable/supermarcket"/>

    <Button
        android:id="@+id/addItem"
        tools:layout_editor_absoluteX="312dp"
        tools:layout_editor_absoluteY="2dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="20dp"



        android:text="Add item"
        android:textColor="#000000"
        android:textSize="10sp"
        android:typeface="serif"

        android:layout_width="140dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"






        />





    <ListView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/listViewSellerPro"
        android:layout_below="@+id/profileDiscription"
        android:layout_alignParentBottom="true"


        >

    </ListView>

</RelativeLayout>
